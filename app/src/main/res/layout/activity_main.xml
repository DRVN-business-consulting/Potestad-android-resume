<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="App Icon"
                android:scaleType="fitCenter"
                android:src="@drawable/iu" />
            <!--    <EditText-->
            <!--        android:layout_width="200dp"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:hint="Enter your name"-->
            <!--        android:imeOptions="actionNext"-->
            <!--        android:inputType="text"-->

            <!--    />-->
            <!--    <EditText-->
            <!--        android:id="@+id/editText"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:hint="Enter your age"-->
            <!--        android:imeOptions="actionDone"-->
            <!--        android:inputType="number"-->

            <!--        />-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingBottom="10dp"
                    android:text="ANALYN G. POTESTAD"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="50sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="App Icon"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gmail_svgrepo_com__1_" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="potestadfake@gmail.com"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="28sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="App Icon"
                        android:scaleType="fitCenter"
                        android:src="@drawable/phone_calling_rounded_svgrepo_com" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+639999999999"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="28sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="App Icon"
                        android:scaleType="fitCenter"
                        android:src="@drawable/facebook_svgrepo_com" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ana Potestad"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="28sp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="App Icon"
                        android:scaleType="fitCenter"
                        android:src="@drawable/address_svgrepo_com" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Jose St., Quezon City"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="28sp"

                        />


                </LinearLayout>
            </LinearLayout>



            <!--        <Button-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="My Button"-->
            <!--            android:onClick="onHideClick"-->
            <!--            />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Experience"
                    android:checked="true"
                    android:textSize="35sp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:id="@+id/checkBoxWE">

                </CheckBox>
                <TextView
                    android:id="@+id/WEtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021 - Present: Philippine Statistics Authority"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievements"
                    android:checked="true"
                    android:textSize="35sp"
                    android:textColor="@color/blue"
                    android:id="@+id/checkBoxAchievements">

                </CheckBox>
                <TextView
                    android:id="@+id/AchievementText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024 - Civil Service Passer (Professional)"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Educational Background"
                    android:checked="true"
                    android:textSize="35sp"
                    android:textColor="@color/blue"
                    android:id="@+id/checkBoxEB">

                </CheckBox>
                <TextView
                    android:id="@+id/EBText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016 - 2020: BSIT"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:checked="true"
                    android:textSize="35sp"
                    android:textColor="@color/blue"
                    android:id="@+id/checkBoxSkills">

                </CheckBox>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/skillsContent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vue"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar1"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="4"
                            android:max="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="React JS"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar2"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="2"
                            android:max="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HTML"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar3"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="5"
                            android:max="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CSS"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar4"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="5"
                            android:max="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JavaScript"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar5"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="4"
                            android:max="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tailwind CSS"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar6"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="5"
                            android:max="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Database Management: MySQL"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="30sp" />
                        <SeekBar
                            android:id="@+id/seekBar7"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:progress="3"
                            android:max="5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>